<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher Dashboard</title>
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(135deg, #e0f7fa, #e1bee7);
      margin: 0;
      padding: 0;
    }

    header {
      background: #4a148c;
      color: white;
      text-align: center;
      padding: 20px 0;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .container {
      width: 90%;
      max-width: 1000px;
      margin: 40px auto;
      background: white;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.15);
      padding: 30px;
    }

    h2 {
      text-align: center;
      color: #4a148c;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
      margin-bottom: 30px;
    }

    input, button {
      padding: 10px 15px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
      outline: none;
      transition: all 0.3s;
    }

    input:focus {
      border-color: #4a148c;
      box-shadow: 0 0 5px #ce93d8;
    }

    button {
      background-color: #6a1b9a;
      color: white;
      cursor: pointer;
      border: none;
      padding: 10px 25px;
      font-weight: 600;
    }

    button:hover {
      background-color: #4a148c;
      transform: scale(1.05);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px 15px;
      text-align: center;
    }

    th {
      background-color: #6a1b9a;
      color: white;
      text-transform: uppercase;
    }

    tr:nth-child(even) {
      background-color: #f3e5f5;
    }

    tr:hover {
      background-color: #ede7f6;
      transition: 0.3s;
    }

    .delete-btn {
      background-color: #e53935;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 600;
      transition: 0.3s;
    }

    .delete-btn:hover {
      background-color: #c62828;
      transform: scale(1.05);
    }

    .no-data {
      text-align: center;
      color: #888;
      font-style: italic;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <header>
    <h1>Teacher Dashboard</h1>
    <p>Manage Students & Marks</p>
  </header>

  <div class="container">
    <h2>Add Student Marks</h2>

    <form action="/teacher/addMark" method="POST">
      <input type="text" name="student_name" placeholder="Enter Student Name" required>
      <input type="text" name="subject" placeholder="Subject" required>
      <input type="number" name="marks" placeholder="Marks" required>
      <button type="submit">Add Mark</button>
    </form>

    <h2>All Marks</h2>

    <% if (marks && marks.length > 0) { %>
      <table>
        <tr>
          <th>Student Name</th>
          <th>Subject</th>
          <th>Marks</th>
          <th>Actions</th>
        </tr>
        <% marks.forEach(mark => { %>
          <tr>
            <td><%= mark.student_name %></td>
            <td><%= mark.subject %></td>
            <td><%= mark.marks %></td>
            <td>
              <form action="/teacher/delete/<%= mark.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this record?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } else { %>
      <p class="no-data">No marks available yet.</p>
    <% } %>
  </div>
</body>
</html>
